{
  "paths": {
    "web": "${paths.base}/web",
    "storage": "${paths.base}/storage"
  },
  "urls": {
    "protocol": null,
    "home_name": "Home"
  },
  "page_types": {
    "page": "\\DigraphCMS\\Content\\Page"
  },
  "files": {
    "path": "${paths.web}/files",
    "url": "/files",
    "ttl": 3600,
    "css": {
      "minify": true,
      "sourcemap": true,
      "keepimportantcomments": true
    },
    "js": {
      "minify": false
    }
  },
  "images": {
    "ttl": 31536000
  },
  "filestore": {
    "path": "${paths.storage}/filestore",
    "symlink": false
  },
  "embedding": {
    "max-height": 75
  },
  "cookies": {
    "secure": false,
    "duration": "3 months"
  },
  "session": {
    "strict_ip_check": true
  },
  "cache": {
    "path": "${paths.storage}/cache",
    "driver": "\\DigraphCMS\\Cache\\OpCache",
    "ttl": 300,
    "fuzz": 150
  },
  "content_cache": {
    "enabled": true,
    "min_ms": 100,
    "default_ttl": 60
  },
  "ui": {
    "breadcrumb": {
      "min_length": 1,
      "include_current": true
    },
    "action-menu": {
      "guestui": true
    }
  },
  "templates": {
    "default": {
      "default": "default.php",
      "error": "minimal.php",
      "500": "minimal.php"
    }
  },
  "theme": {
    "bundle_css": false
  },
  "fields": {
    "site": {
      "name": "Unnamed site"
    }
  },
  "fs": {
    "links": false,
    "umask_file": 79,
    "umask_dir": 2
  },
  "db": {
    "adapter": "sqlite",
    "name": "${paths.storage}/database",
    "charset": "utf8",
    "pdo_options": [],
    "sqlite": {
      "create_functions": true
    }
  },
  "page": {
    "cachettl": {
      "_any": null
    },
    "browserttl": {
      "_any": null
    },
    "stalettl": {
      "_any": 600
    }
  },
  "errors": {
    "display_trace": false
  },
  "users": {
    "sources": {
      "oauth2": "\\DigraphCMS\\Users\\OAuth2UserSource",
      "cas": "\\DigraphCMS\\Users\\CASUserSource"
    }
  },
  "user_sources": {
    "oauth2": {
      "providers": {
        "github": {
          "name": "GitHub",
          "class": "\\League\\OAuth2\\Client\\Provider\\Github",
          "scope": [
            "user:email"
          ]
        },
        "google": {
          "name": "Google",
          "class": "\\League\\OAuth2\\Client\\Provider\\Google",
          "scope": [
            "userinfo.email"
          ]
        },
        "facebook": {
          "name": "Facebook",
          "class": "\\League\\OAuth2\\Client\\Provider\\Facebook",
          "scope": [
            "email"
          ],
          "config": {
            "graphApiVersion": "v2.10"
          }
        }
      }
    }
  }
}