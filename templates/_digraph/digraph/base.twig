<!DOCTYPE html>
<html lang="en" dir="ltr">

  <head>
    {% block head_start %}{% endblock %}

    <title>
      {% block title %}
        {% include 'digraph/title.twig' %}
      {% endblock %}
    </title>
    {% include 'digraph/head.twig' %}

    {% block head_end %}{% endblock %}
  </head>

  <body>
    {% block body_start %}{% endblock %}

    <div id="page-wrapper">
      {% block page_wrapper_start %}{% endblock %}

      {% block page_wrapper %}
        {% include 'digraph/areas.twig' with {
          areas : helper.areas
        } %}
      {% endblock %}

      {% block page_wrapper_end %}{% endblock %}
    </div>

    <!-- foot javascript -->
    {% for file in helper.jsFoot %}
        <script src="{{file}}"></script>
    {% endfor %}
    {% block body_end %}{% endblock %}
  </body>

</html>
